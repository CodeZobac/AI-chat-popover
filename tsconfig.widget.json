{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": false,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "declaration": true,
    "outDir": "./dist/widget/types",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src/widget/**/*",
    "src/lib/utils.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/app/**/*",
    "src/components/**/*",
    "src/hooks/**/*",
    "src/types/**/*",
    "**/*.test.*",
    "**/*.spec.*",
    "**/__tests__/**/*"
  ]
}